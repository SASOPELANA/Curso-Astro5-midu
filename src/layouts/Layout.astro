---
import "../styles/global.css";

// Importamos el componente para animaciones al pasar de una p√°gina a otra
import { ClientRouter } from "astro:transitions";

// Interface para titulos
interface Props {
  title?: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    <ClientRouter />
  </head>
  <body class="grid place-content-center p-20">
    <div class="container">
      <slot />
    </div>
  </body>
</html>

<style>
  html {
    margin: 0;
    width: 100%;
    height: 100%;
    font-family: system-ui, sans-serif;
    background-color: #13151a;
    color: #fff;
  }
</style>
